generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  // id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @id @map("_id")
  image      String
  username   String
  phone      String?
  college    String?
  department String?
  batch      String?
  csimember  Boolean?
  events     String[]
}

model Transactions {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  email         String
  username      String
  event         String
  transactionid String
}
